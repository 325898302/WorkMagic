<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AboutShowActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:layout_marginRight="128dp"
                    android:shadowColor="#1DCFC9"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="10"
                    android:text="איתן הקוסם"
                    android:textColor="#E41E0F"
                    android:textSize="28dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/balloon2" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="קוסם ליום הולדת ומסיבות \n שיהפוך את החגיגה לבלתי נשכחת! \n מופע הכולל קטעים מרהיבים \n עם שיתוף הקהל במופע. \n
             מופע שיגרום לילדכם להיות כוכב האירוע. \n איתן הקוסם מבטיח להעניק דקות ארוכות \n של כיף וקסמים שמתאימים במיוחד לגיל המסיבה \n כדי ליצור חוויה חד פעמית."
            android:textColor="#CD8110"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="אז קדימה, זה הזמן להזמין קוסם!"
            android:textColor="#CD8110"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/right"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/arrowr" />

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="wrap_content"
                android:layout_height="200dp">


                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show1" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show2" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show3" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show4" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show5" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show6" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show7" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show8" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show9" />

                <ImageView
                    android:layout_width="270dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/show10" />

            </ViewFlipper>

            <Button
                android:id="@+id/left"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="1"
                android:background="@drawable/arrowl" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="#FFEB3B">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hat"
            android:orientation="vertical">

            <TextView
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:text="צור קשר"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#F81717"
                android:textSize="25dp"
                android:textStyle="bold|italic">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="24dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btGifPhone"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/phone" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/GifPhone"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:src="@drawable/phone" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:shadowColor="#cf1d1d"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="40"
                    android:text="0503407888"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btGifWhat"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/whatsapp" />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/im"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/whatsapp" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btWhat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:shadowColor="#cf1d1d"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="40"
                    android:text="שלח הודעה"
                    android:textSize="16dp"
                    android:textStyle="bold">

                </Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btGifFace"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:background="@drawable/facebook"/>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifFace"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/facebook" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btFace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:shadowColor="#cf1d1d"
                    android:shadowDx="0.0"
                    android:shadowDy="0.0"
                    android:shadowRadius="40"
                    android:text="facebook"
                    android:textSize="13dp"
                    android:textStyle="bold">

                </Button>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>

